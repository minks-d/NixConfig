;;; rust.el -- Rust configuration for emacs  -*- lexical-binding: t; -*-
;;; Commentary:

;;; Code:
(use-package rustic)

(use-package flycheck-rust
  :custom (flycheck-idle-change-delay 1))
(with-eval-after-load 'rustic
  (add-hook 'flycheck-mode-hook #'flycheck-rust-setup))

(use-package lsp-mode
  :init (push 'rustic-clippy flycheck-checkers)
  :hook (rustic-mode . lsp))

(provide 'rust)
;;; rust.el ends here
